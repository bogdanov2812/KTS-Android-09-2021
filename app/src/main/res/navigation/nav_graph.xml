<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onBoardingPage">

    <fragment
        android:id="@+id/onBoardingPage"
        android:name="com.bogdanov.strava.OnBoarding"
        android:label="OnBoarding" >
        <action
            android:id="@+id/action_onBoardingPage_to_loginPage"
            app:destination="@id/loginPage"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginPage"
        android:name="com.bogdanov.strava.LoginPage"
        android:label="LoginPage" >
        <action
            android:id="@+id/action_loginPage_to_mainPage"
            app:destination="@id/mainPage"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainPage"
        android:name="com.bogdanov.strava.Main"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
</navigation>