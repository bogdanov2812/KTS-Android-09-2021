<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.bogdanov.strava.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.bogdanov.strava.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_userChooseFragment"
            app:destination="@id/userChooseFragment" />
    </fragment>
    <fragment
        android:id="@+id/userChooseFragment"
        android:name="com.bogdanov.strava.user_choose.UserChooseFragment"
        android:label="UserChooseFragment" >
        <action
            android:id="@+id/action_userChooseFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
        <action
            android:id="@+id/action_userChooseFragment_to_userWorkoutListFragment"
            app:destination="@id/userWorkoutListFragment" />
    </fragment>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.bogdanov.strava.user_info.UserInfoFragment"
        android:label="UserInfoFragment" >
        <action
            android:id="@+id/action_userInfoFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userWorkoutListFragment"
        android:name="com.bogdanov.strava.user_workouts.UserWorkoutListFragment"
        android:label="UserWorkoutListFragment" />
</navigation>